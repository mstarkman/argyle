<div id="app-list" class="row app-list">
  <div class="span12">
    <% if apps.count == 0 %>
      <div class="row-fluid empty-state">
        <div class="span11">
          <h3>You don't have any apps configured, why do you create one?</h3>
        </div>
        <div class="span1">
          <div class="cta">
            <i class="icon-arrow-up"></i>
          </div>
        </div>
    <% else %>
      <%= render apps %>
    <% end %>
  </div>
</div>